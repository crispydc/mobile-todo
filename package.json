{
  "name": "mobile-todo",
  "version": "0.0.1",
  "description": "Playground app for exploring mobile application with backbone + JQM + Cordova",
  "main": "Gruntfile.js",
  "author": "crispydc",
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browser": {
    "jquery": "./node_modules/jquery/dist/jquery.min.js",
    "jquery-mobile": "./node_modules/jquery-mobile/dist/jquery.mobile.min.js"
  },
  "browserify-shim": {
    "jquery": "$",
    "jquery-mobile": {
      "exports": "$.mobile",
      "depends": [
        "jquery:$"
      ]
    }
  },
  "devDependencies": {
    "backbone": "^1.1.2",
    "browserify": "^9.0.3",
    "browserify-shim": "^3.8.3",
    "grunt": "~0.4.2",
    "grunt-browserify": "^3.6.0",
    "grunt-contrib-clean": "~0.5.0",
    "grunt-contrib-copy": "~0.7.0",
    "grunt-contrib-jshint": "~0.7.2",
    "grunt-contrib-watch": "~0.5.3",
    "jquery": "^2.1.3",
    "jquery-mobile": "^1.4.1",
    "underscore": "^1.8.2"
  }
}
